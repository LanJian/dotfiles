[user]
  name = Jack Huang
  email = {{ .email }}
  signingKey = ~/.ssh/id_ed25519.pub
[core]
  editor = nvim +15 -c 'startinsert'
  excludesfile = ~/.gitignore_global
  pager = delta
[commit]
  gpgsign = true
[github]
  user = lanjian
[apply]
  whitespace = fix
[color]
  status = auto
  branch = auto
  diff = auto
[alias]
  ci = commit
  up = update
  st = status
  br = branch
  co = checkout
  ch = cherry-pick
  di = diff
  lg = log -p
  gl = log --graph --decorate
  log = log --graph --oneline --abbrev-commit --decorate
  rl = reflog
  who = shortlog -s --
  llog = log --date=local
  ol = log --oneline
  w = whatchanged
  p = pull --rebase
  append = town append
  hack = town hack
  kill = town kill
  new-pull-request = town new-pull-request
  prepend = town prepend
  prune-branches = town prune-branches
  rename-branch = town rename-branch
  repo = town repo
  ship = town ship
  sync = town sync
[credential]
  helper = cache --timeout=3600
[gpg]
  format = ssh

# Use this to automatically rebase when you make a commit BEFORE you run `git pull..`
# so that you don't have a ton of merge commits when you commit then pull
# You also need to add `rebase = true` to the [branch "some_branch"] section in .git/config
# of each repo for whatever branch (This setting will add that for you for new repos I believe)
[branch]
  autosetuprebase = always

[commit]
  template = ~/.config/git/commit-template

# git-delta stuff
[interactive]
    diffFilter = delta --color-only
[add.interactive]
    useBuiltin = false # required for git 2.37.0
[delta]
    navigate = true
    light = false
    side-by-side = true
[merge]
    conflictstyle = diff3
[diff]
    colorMoved = default

[includeIf "gitdir:~/work/"]
    path = ~/work/.gitconfig
